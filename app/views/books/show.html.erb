
<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: @user %>

		<h2>New book</h2>
		<%= render 'books/form', book: @book %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
				<tr>
					<td>
						<%= link_to user_path(@saved_book.user) do %>
							<%= attachment_image_tag @saved_book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %><br>
							<%= @saved_book.user.name %>
						<% end %>
					</td>

					<td><%= link_to @saved_book.title, book_path(@saved_book) %></td>
					<td><%= @saved_book.body %></td>
					<% if @saved_book.user_id === current_user.id %>
						<td><%= link_to "Edit", edit_book_path(@saved_book), class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
						<td><%= link_to "Destroy", book_path(@saved_book), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger" %></td>
					<% end %>
					
					<td>
						<%= link_to "#{@saved_book.book_comments.count} コメント", book_path(@saved_book.id) %>
					</td>
					
				</tr>
			</table>

			<table>
				<% @saved_book.book_comments.each do |book_comment| %>
				<tr>
					<td>
						<%= attachment_image_tag book_comment.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %><br>
						<%= book_comment.user.name %>
					</td>
					<td><%= book_comment.comment %></td>
					<td>
						<% if book_comment.user == current_user %>
	            <div>
	              <%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-danger pull-right" %>
	            </div>
          <% end %>
					</td>
				</tr>
				<% end %>
			</table>


			<%= form_with(model:[@saved_book, @book_comment], local: true) do |f| %>
		  <div class="row">
		    <div class="col-sm-12">
		      <%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
		    </div>
		  </div>
		  <%= f.submit "送信する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
		<% end %>

	</div>
</div>

