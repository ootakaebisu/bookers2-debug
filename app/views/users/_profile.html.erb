<table class="table">
	<!--<tr>< %= attachment_image_tag user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%></tr>-->
	<tr><%= attachment_image_tag user, :profile_image, format: 'jpeg', class: "pull-left profile-thumb", fallback: "no_image.jpg", size: "100x100" %></tr>

	<tr>
		<th>name</th>
		<th><%= user.name %></th>
	</tr>

	<tr>
		<th>introduction</th>
		<th><%= user.introduction %></th>
	</tr>

	<tr>
		<th>follows</th>
		<th><%= link_to "#{user.follower.count}", follow_users_user_path(user) %></th>
	</tr>

	<tr>
		<th>followers</th>
		<th><%= link_to "#{user.followed.count}", followers_users_user_path(user) %></th>
	</tr>


</table>

<div class="row">
	<% if user == current_user %>
		<%= link_to '', edit_user_path(user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{user.id}" %>
	<% else %>
		<% if current_user.following?(user) %>
	    <%= link_to 'フォロー外す', unfollow_path(user.id), method: :POST, class: "btn btn-primary" %>
	  <% else %>
	    <%= link_to 'フォローする', follow_path(user.id), method: :POST, class: "btn btn-success" %>
	  <% end %>
	<% end %>

</div>

